        <hr>
        <h1 class="post">Posts</h1>
        <% if(posts.length < 1) { %>
            <div>
                <h3>Nothing to show</h3>
                <p>Create a post now!</p>
                <a href="/admin/create">Add Post</a>
            </div>
        <% }%>
        <% for(let post of posts) { %>
        <div class="post-box">
            <div>
                <p class="post-title"><%= post.title %></p>
                <p class="">Posted by @<%= post.userId.username %></p>
            </div>
            <a class="btn" href="/post/<%= post._id %>">See More...</a>
        </div>
        <% } %>
