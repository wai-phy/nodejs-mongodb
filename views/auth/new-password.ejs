<%- include("../includes/head") %>

<section class="max-width">
    <div>
        <a href="/">Go Back Home</a>
    </div>
    <h1 class="title">Change New Password</h1>
    <div>
        <% if(errorMsg) { %>
        <p class="errorMsg"><%= errorMsg %></p>
        <% } %>
    </div>
    <form action="/change-new-password" method="post">
        <input type="hidden" value="<%= csrfToken %>" name="_csrf">
        <input type="hidden" value="<%= resetToken %>" name="resetToken">
        <input type="hidden" value="<%= user_id %>" name="user_id">
        <div>
            <label class="label" for="new_password">New Password</label>
            <input class="input-box" type="password" id="new_password" name="password" value="<%= oldData.password %>">
        </div>
        <div>
            <label class="label" for="confirm_password">Confirm Password</label>
            <input class="input-box" type="password" id="confirm_password"
                name="confirm_password" value="<%= oldData.confirm_password %>">
        </div>
        <button>Change Password</button>
    </form>
</section>
<%- include("../includes/footer") %>